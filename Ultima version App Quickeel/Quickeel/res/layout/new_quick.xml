<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:background="@color/fondo_rosa_blanco"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/buttonlayout" android:orientation="horizontal"
                android:layout_width="fill_parent" android:layout_height="55dp"
                android:height="30dp" android:gravity="left|top" android:background="@drawable/fondoazul"
                android:paddingTop="1dp" android:paddingBottom="2dp"  >
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/buttonlayout2" android:orientation="horizontal"
                        android:layout_height="fill_parent" android:gravity="left|center_vertical"
                        android:layout_gravity="left" android:layout_width="wrap_content">


                       <ImageButton
                           android:id="@+id/bthome"
                           android:layout_width="42dp"
                           android:layout_height="42dp"
                           android:layout_marginLeft="3dp"
                           android:layout_marginRight="3dp"
                           android:layout_marginTop="5dp"
                           android:background="@drawable/cancel" />

						<ImageView style="@style/TitleBarSeparator"  />
                        <TextView
                            android:id="@+id/txt_new_quick"
                            android:layout_width="fill_parent"
                            android:layout_height="30dp"
                            android:layout_marginLeft="70dp"
                            android:layout_marginTop="3dp"
                            android:text="New Quick" android:textColor="@color/blanco" android:textSize="20dip"/>
                        
						 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                android:id="@+id/buttonlayout3" android:orientation="horizontal"
                                android:layout_height="fill_parent"  android:gravity="center"
                                 android:layout_width="wrap_content" android:layout_marginLeft="60dp">
						 <ImageView style="@style/TitleBarSeparator" />

                          <ImageButton
                              android:id="@+id/btsearch"
                              android:layout_width="32dp"
                              android:layout_height="32dp"
                              android:layout_marginLeft="5dp"
                              android:layout_marginTop="5dp"
                              android:background="@drawable/accept" />

                        </LinearLayout>
                </LinearLayout>
  </LinearLayout>    
    
  <LinearLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:orientation="vertical">
      
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/edit_title" android:hint="Title" android:layout_marginTop="20dip" 
                android:layout_width="fill_parent" android:maxLength="20"
                android:layout_height="wrap_content" android:drawableLeft="@drawable/hot"  />

            <EditText
                android:id="@+id/edit_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"  android:textColorHighlight="@color/naranja"
                android:layout_weight="0.80"  android:drawableLeft="@drawable/coment" 
                android:ems="10" android:hint="What happen around you?"
                android:maxLength="100" android:lines="3">

                <requestFocus />
            </EditText>

			
            <EditText
                android:id="@+id/edit_location"  android:hint="Location"  android:layout_marginTop="10dip"
                android:layout_width="fill_parent" android:drawableLeft="@drawable/location_azul" 
                android:layout_height="wrap_content" android:editable="false" android:focusable="false"  android:focusableInTouchMode="false" />
            
            		<TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip" android:textSize="15dip"
                android:text="Category" />
            <Spinner
                android:id="@+id/sp_category" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"  android:drawableLeft="@drawable/location_azul"
               />
				<TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip" android:textSize="15dip"
                android:text="SubCategory" />
            <Spinner
                android:id="@+id/sp_type"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"  android:drawableLeft="@drawable/location_azul"
                 >
            </Spinner>
            
            
        </LinearLayout>
        
  
  </LinearLayout>
    

</LinearLayout>