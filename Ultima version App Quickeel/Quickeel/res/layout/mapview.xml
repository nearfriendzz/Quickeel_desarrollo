<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent" android:orientation="vertical"
              android:layout_height="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/buttonlayout" android:orientation="horizontal"
                android:layout_width="fill_parent" android:layout_height="55dp"
                android:height="30dp" android:gravity="left|top" android:background="@drawable/fondoazul"
                android:paddingTop="1dp" android:paddingBottom="2dp"  >
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/buttonlayout2" android:orientation="horizontal"
                        android:layout_height="fill_parent" android:gravity="left|center_vertical"
                        android:layout_gravity="left" android:layout_width="wrap_content">

                       <ImageButton
                           android:id="@+id/bthome"
                           android:layout_width="42dp"
                           android:layout_height="42dp"
                           android:layout_marginLeft="3dp"
                           android:layout_marginRight="3dp"
                           android:layout_marginTop="5dp"
                           android:background="@drawable/cancel" />

						<ImageView style="@style/TitleBarSeparator"  />
                        <TextView
                            android:id="@+id/txt_new_quick"
                            android:layout_width="fill_parent"
                            android:layout_height="30dp"
                            android:layout_marginLeft="70dp"
                            android:layout_marginTop="3dp"
                            android:text="Location" android:textColor="@color/blanco" android:textSize="20dip"/>
                        
						 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                android:id="@+id/buttonlayout3" android:orientation="horizontal"
                                android:layout_height="fill_parent"  android:gravity="center"
                                 android:layout_width="wrap_content" android:layout_marginLeft="60dp">
						 <ImageView style="@style/TitleBarSeparator" />

                          <ImageButton
                              android:id="@+id/btsearch"
                              android:layout_width="32dp"
                              android:layout_height="32dp"
                              android:layout_marginLeft="5dp"
                              android:layout_marginTop="5dp"
                              android:background="@drawable/accept" />

                        </LinearLayout>
                </LinearLayout>
  </LinearLayout>


    <LinearLayout
        android:id="@+id/searchPanel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="visible" style="@drawable/fondoazul"
        >
        <EditText
            android:id="@+id/searchText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"  android:drawableLeft="@drawable/search" 
            />
        <Button
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/searchPanel2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="visible" style="@drawable/fondoazul">
        <com.google.android.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true"
        android:enabled="true"
        android:apiKey="0Y64OfQSFdy8K0PApZvblzFkOAiAYqTMVr6GKSg"
        />
        </LinearLayout>
</LinearLayout>